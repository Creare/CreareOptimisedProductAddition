<config>
    <modules>
        <Creare_Opa>
            <version>0.1.0</version>
        </Creare_Opa>
    </modules>
    <frontend>
        <routers>
            <opa>
                <use>standard</use>
                <args>
                    <module>Creare_Opa</module>
                    <frontName>opa</frontName>
                </args>
            </opa>
        </routers>
        <layout>
            <updates>
                <opa>
                    <file>opa.xml</file>
                </opa>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<opa>
				<use>admin</use>
				<args>
					<module>Creare_Opa</module>
					<frontName>opa</frontName>
				</args>
			</opa>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<opa>
					<file>opa.xml</file>
				</opa>
			</updates>
		</layout>
    </adminhtml>
</config>